root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf

[*.{js,jsx,ts,tsx,css,html,md,yml,yaml,json}]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{py,java,r,R}]
indent_style = space
indent_size = 4

[*.{md,rst}]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2
